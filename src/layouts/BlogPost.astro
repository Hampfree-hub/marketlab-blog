---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import CryptoArticleBanner from '../components/CryptoArticleBanner.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import CookieBanner from '../components/CookieBanner.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category } = Astro.props;

// Определяем категорию для баннера (по умолчанию 'general')
const bannerCategory = (category as 'rvi' | 'mfi' | 'chaikin' | 'williams' | 'general') || 'general';
---

<!doctype html>
<html lang="ru">
	<head>
		<BaseHead title={title} description={description} />
		<link rel="stylesheet" href="/src/styles/global.css" />
		<link rel="stylesheet" href="/src/styles/nes8bit.css" />
		<style>
			body {
				background: var(--nes-white);
				color: var(--nes-black);
				font-family: 'Arial', sans-serif;
			}

			.nes8bit-container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 20px;
			}

			.article-content {
				background: var(--nes-white);
				border: 3px solid var(--nes-black);
				padding: 30px;
				margin: 20px 0;
				box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.2);
			}

			.article-content :global(h1),
			.article-content :global(h2),
			.article-content :global(h3) {
				font-family: 'Arial', sans-serif;
				color: var(--nes-black);
				margin-top: 1.5em;
				margin-bottom: 0.5em;
			}

			.article-content :global(h1) {
				font-size: 2rem;
				border-bottom: 3px solid var(--nes-black);
				padding-bottom: 0.5em;
			}

			.article-content :global(h2) {
				font-size: 1.5rem;
			}

			.article-content :global(h3) {
				font-size: 1.2rem;
			}

			.article-content :global(p) {
				line-height: 1.6;
				margin-bottom: 1em;
			}

			.article-content :global(ul),
			.article-content :global(ol) {
				margin-left: 1.5em;
				margin-bottom: 1em;
			}

			.article-content :global(li) {
				margin-bottom: 0.5em;
			}

			.article-content :global(code) {
				background: rgba(0, 0, 0, 0.1);
				padding: 2px 6px;
				border: 1px solid var(--nes-black);
				font-family: 'Courier New', monospace;
			}

			.article-content :global(pre) {
				background: var(--nes-gray);
				border: 2px solid var(--nes-black);
				padding: 15px;
				overflow-x: auto;
				margin: 1em 0;
			}

			.article-content :global(pre code) {
				background: transparent;
				border: none;
				padding: 0;
			}

			.article-content :global(blockquote) {
				border-left: 4px solid var(--nes-black);
				padding-left: 1em;
				margin: 1em 0;
				font-style: italic;
			}

			.article-content :global(img) {
				max-width: 100%;
				height: auto;
				border: 2px solid var(--nes-black);
				margin: 1em 0;
			}

			.article-meta {
				text-align: center;
				margin-bottom: 20px;
				font-family: var(--nes-font);
				font-size: 0.9rem;
				color: var(--nes-gray);
			}

			@media (max-width: 768px) {
				.nes8bit-container {
					padding: 10px;
				}

				.article-content {
					padding: 20px;
				}
			}
		</style>
	</head>

	<body class="nes8bit-theme">
		<CookieBanner />
		<Header />
		<div class="nes8bit-container">
			<!-- 8-бит баннер статьи -->
			<CryptoArticleBanner 
				title={title}
				subtitle={description}
				category={bannerCategory}
			/>

			<!-- Hero изображение -->
			{heroImage && (
				<div style="margin-bottom: 20px;">
					<Image 
						width={1020} 
						height={510} 
						src={heroImage} 
						alt={title}
						style="width: 100%; height: auto; border: 3px solid var(--nes-black); box-shadow: 6px 6px 0px rgba(0, 0, 0, 0.2);"
					/>
				</div>
			)}

			<!-- Метаданные -->
			<div class="article-meta">
				<FormattedDate date={pubDate} />
				{updatedDate && (
					<div style="margin-top: 5px; font-style: italic;">
						Обновлено: <FormattedDate date={updatedDate} />
					</div>
				)}
			</div>

			<!-- Контент статьи -->
			<article class="article-content">
				<slot />
			</article>
		</div>
		<Footer />
	</body>
</html>
