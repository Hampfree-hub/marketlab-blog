---
// EmilyControlPanel.astro - Панель управления в 8-bit стиле для компьютера Эмили
---

<aside class="emily-controls">
	<div class="control-section">
		<div class="label">THEME</div>
		<button id="theme-toggle" class="ctrl-btn" title="Toggle theme">
			<span class="icon theme-sun">☼</span>
			<span class="icon theme-moon">☾</span>
		</button>
	</div>

	<div class="section-divider"></div>

	<div class="control-section">
		<div class="label">NET</div>
		<a href="https://t.me/hampfree_market_lab" target="_blank" class="ctrl-btn" title="Telegram">TG</a>
		<a href="https://dzen.ru/hampfree_algo_trading" target="_blank" class="ctrl-btn" title="Dzen">DZ</a>
		<a href="https://vk.com/hampfree_market_lab" target="_blank" class="ctrl-btn" title="VK.com">VK</a>
	</div>
</aside>

<script>
	(function() {
		const themeBtn = document.getElementById('theme-toggle');
		const html = document.documentElement;
		
		if (!themeBtn) return;
		
		function setUITheme(theme) {
			html.classList.remove('dark-theme', 'light-theme');
			html.classList.add(theme + '-theme');
			localStorage.setItem('theme', theme);
			
			const sunIcon = themeBtn.querySelector('.theme-sun');
			const moonIcon = themeBtn.querySelector('.theme-moon');
			
			if (sunIcon && moonIcon) {
				sunIcon.style.display = theme === 'light' ? 'block' : 'none';
				moonIcon.style.display = theme === 'dark' ? 'block' : 'none';
			}
		}

		const savedTheme = localStorage.getItem('theme') || 'dark';
		setUITheme(savedTheme);
		
		themeBtn.addEventListener('click', () => {
			const currentTheme = html.classList.contains('light-theme') ? 'light' : 'dark';
			setUITheme(currentTheme === 'dark' ? 'light' : 'dark');
		});
	})();
</script>

<style>
	.emily-controls {
		position: fixed;
		right: 8px;
		top: 50%;
		transform: translateY(-50%);
		z-index: 10001;
		display: flex;
		flex-direction: column;
		gap: 0;
		background: var(--8bit-black);
		border: 4px solid var(--8bit-white);
		padding: 6px 3px;
		width: 48px;
		min-width: 48px;
		max-width: 48px;
		box-shadow: 0 0 20px var(--8bit-white);
		transition: all 0.05s linear;
	}

	.emily-controls:hover {
		box-shadow: 0 0 30px var(--8bit-white);
	}

	.control-section {
		display: flex;
		flex-direction: column;
		gap: 4px;
		padding: 3px 0;
	}

	.section-divider {
		height: 4px;
		background: var(--8bit-white);
		margin: 4px 2px;
		opacity: 0.6;
	}

	.label {
		font-size: 0.375rem;
		color: var(--8bit-cyan);
		text-align: center;
		letter-spacing: 1px;
		margin-bottom: 3px;
		text-transform: uppercase;
		line-height: 1;
		font-family: var(--8bit-font) !important;
		text-shadow: 1px 1px 0px #000000;
	}

	.ctrl-btn {
		width: 36px;
		height: 36px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--8bit-black);
		border: 4px solid var(--8bit-white);
		color: var(--8bit-white);
		cursor: pointer;
		font-family: var(--8bit-font) !important;
		font-size: 0.5rem;
		text-decoration: none;
		transition: all 0.05s linear;
		position: relative;
		margin: 0 auto;
		text-transform: uppercase;
		box-shadow: 0 0 10px var(--8bit-white);
	}

	.ctrl-btn::after {
		content: attr(title);
		position: absolute;
		right: 100%;
		margin-right: 8px;
		padding: 4px 8px;
		background: var(--8bit-black);
		border: 4px solid var(--8bit-white);
		color: var(--8bit-white);
		font-size: 0.5rem;
		font-family: var(--8bit-font) !important;
		white-space: nowrap;
		opacity: 0;
		pointer-events: none;
		transition: opacity 0.05s linear;
		z-index: 10002;
		box-shadow: 0 0 15px var(--8bit-white);
	}

	.ctrl-btn:hover::after {
		opacity: 1;
	}

	.ctrl-btn:hover {
		background: var(--8bit-lime);
		color: var(--8bit-black);
		border-color: var(--8bit-lime);
		transform: translate(-2px, -2px);
		box-shadow: 0 0 40px var(--8bit-lime);
	}

	.ctrl-btn:active {
		transform: translate(0, 0);
		box-shadow: 0 0 20px var(--8bit-lime);
	}

	.theme-btn .icon {
		font-size: 1rem;
		line-height: 1;
	}

	.theme-sun { display: none; }
	.theme-moon { display: block; }

	:global(.light-theme) .theme-sun { display: block; }
	:global(.light-theme) .theme-moon { display: none; }

	@media (max-width: 1024px) {
		.emily-controls {
			position: fixed;
			right: 10px;
			top: auto;
			bottom: 20px;
			transform: none;
			flex-direction: row;
			gap: 6px;
			padding: 6px;
			width: auto;
			min-width: auto;
			max-width: none;
		}
		
		.control-section {
			flex-direction: row;
			gap: 4px;
			padding: 0;
		}
		
		.section-divider {
			width: 4px;
			height: auto;
			margin: 0 3px;
		}
		
		.label {
			display: none;
		}
	}
</style>
