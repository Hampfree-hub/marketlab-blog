<style>
	footer {
		padding: 3em 1em 2em 1em;
		background: var(--bg-secondary);
		color: var(--text-primary);
		margin-top: 4em;
	}

	.footer-content {
		max-width: 720px;
		margin: 0 auto;
	}

	.footer-copyright {
		text-align: center;
		margin-bottom: 2em;
		padding-bottom: 2em;
		border-bottom: 1px solid var(--bg-primary);
	}

	.footer-copyright p {
		margin: 0;
		color: var(--text-secondary);
		font-size: 0.9em;
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2em;
		margin-bottom: 2em;
	}

	.footer-section h3 {
		margin: 0 0 1em 0;
		font-size: 1em;
		color: var(--accent);
		font-weight: 700;
	}

	.footer-section a {
		display: block;
		margin: 0.5em 0;
		color: var(--text-secondary);
		text-decoration: none;
		transition: color 0.2s ease;
		font-size: 0.9em;
	}

	.footer-section a:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		.footer-links {
			grid-template-columns: 1fr;
			gap: 1.5em;
		}
	}
</style>
