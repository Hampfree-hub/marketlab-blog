<style>
	.disclaimer {
		margin: 3em 0;
		padding: 2em 2.5em;
		background: var(--bg-secondary);
		border-left: 4px solid var(--accent);
		border-radius: 12px;
		font-size: 0.95em;
		line-height: 1.8;
		color: var(--text-primary);
		box-shadow: var(--box-shadow);
	}

	.disclaimer-title {
		margin: 0 0 0.5em 0;
		color: var(--accent);
		font-weight: 700;
	}

	.disclaimer p {
		margin: 1em 0;
		padding: 0;
	}

	.disclaimer-humor {
		margin-top: 1.5em;
		padding-top: 1.5em;
		border-top: 1px solid rgba(74, 154, 74, 0.2);
		font-style: italic;
		opacity: 0.85;
		color: var(--text-secondary);
	}

	.disclaimer-footer {
		margin-top: 1.5em;
		font-size: 0.95em;
		font-weight: 600;
		color: var(--text-primary);
	}

	@media (prefers-color-scheme: dark) {
		.disclaimer {
			background: var(--bg-secondary);
			border-left-color: var(--accent-light);
		}
	}
</style>

