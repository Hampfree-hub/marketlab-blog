</section>

<style>
	.cta-block-section {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 20px;
		margin: 20px 0; /* Уменьшенный отступ между блоками (было 30px) */
		margin-bottom: 20px; /* Уменьшенный отступ между блоками (было 30px) */
		max-width: 900px;
		margin-left: auto;
		margin-right: auto;
	}

	.cta-block {
		background: var(--nes-white);
		border: var(--nes-border-width, 2px) solid var(--nes-black);
		border-radius: 4px;
		padding: 20px;
		/* БЕЗ теней - плоские элементы */
		text-align: center;
	}

	.cta-block-title {
		font-family: 'Arial', sans-serif;
		font-size: 1.2rem;
		font-weight: bold;
		color: var(--nes-black);
		margin: 0 0 15px 0;
		border-bottom: var(--nes-border-width, 2px) solid var(--nes-gray);
		padding-bottom: 10px;
	}

	.cta-buttons {
		display: flex;
		gap: 10px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-button {
		background: var(--crypto-ethereum-gradient);
		color: var(--nes-white);
		/* Beveling для объёма */
		border-top: var(--nes-border-width, 2px) solid var(--nes-bevel-light, #FFFFFF);
		border-left: var(--nes-border-width, 2px) solid var(--nes-bevel-light, #FFFFFF);
		border-bottom: var(--nes-border-width, 2px) solid var(--nes-bevel-dark, #000000);
		border-right: var(--nes-border-width, 2px) solid var(--nes-bevel-dark, #000000);
		border-radius: 4px; /* Сглаженные углы */
		padding: 10px 20px;
		text-decoration: none;
		font-family: var(--nes-font);
		font-size: 0.7rem;
		text-transform: uppercase;
		transition: all 0.15s ease;
		/* БЕЗ теней - объём создаётся через beveling */
		text-shadow: 1px 1px 0px rgba(0, 0, 0, 0.3);
		position: relative;
	}

	.cta-button:hover {
		background: var(--nes-yellow); /* Унифицированный hover - жёлтый цвет */
		color: var(--nes-black);
		transform: translateY(-1px); /* Небольшое выдвижение вверх */
		/* Beveling сохраняется для объёма */
		text-shadow: 1px 1px 0px rgba(255, 255, 255, 0.3);
	}

	.cta-button:active {
		transform: translateY(1px); /* Кнопка прожимается вниз */
		/* Инвертируем beveling при нажатии */
		border-top: var(--nes-border-width, 2px) solid var(--nes-bevel-dark, #000000);
		border-left: var(--nes-border-width, 2px) solid var(--nes-bevel-dark, #000000);
		border-bottom: var(--nes-border-width, 2px) solid var(--nes-bevel-light, #FFFFFF);
		border-right: var(--nes-border-width, 2px) solid var(--nes-bevel-light, #FFFFFF);
		transition: transform 0.05s ease, border 0.05s ease;
	}

	/* Focus states для CTA-кнопок */
	.cta-button:focus {
		outline: var(--nes-border-width, 2px) solid var(--nes-yellow);
		outline-offset: 2px;
		/* БЕЗ теней - плоские кнопки */
	}

	.cta-button:focus:not(:focus-visible) {
		outline: none;
		/* БЕЗ теней - плоские кнопки */
	}

	/* Мобильная адаптация */
	@media (max-width: 768px) {
		.cta-block-section {
			grid-template-columns: 1fr;
			margin: 15px 0; /* Уменьшенный отступ между блоками на мобильных (было 20px) */
			margin-bottom: 15px; /* Уменьшенный отступ между блоками на мобильных (было 20px) */
		}
	}
	
	/* Мобильные интерактивные элементы - активное состояние при нажатии */
	@media (max-width: 768px) {
		.cta-button:active {
			transform: translateY(1px); /* Кнопка прожимается вниз */
			/* БЕЗ теней - плоские кнопки */
		}
	}

	/* ТЁМНАЯ ТЕМА: CTABlock */
	html.dark-theme .cta-block {
		background: var(--nes-bg-card, #1a2a1a);
		border-color: rgba(0, 255, 65, 0.3);
	}

	html.dark-theme .cta-block-title {
		color: var(--nes-neon-green, #00ff41);
		border-bottom-color: rgba(0, 255, 65, 0.4);
	}

	html.dark-theme .cta-button {
		background: linear-gradient(135deg, rgba(0, 255, 65, 0.2) 0%, rgba(0, 255, 255, 0.2) 100%);
		border-color: rgba(0, 255, 65, 0.4);
		color: var(--nes-neon-green, #00ff41);
	}

	html.dark-theme .cta-button:hover {
		background: var(--nes-neon-green, #00ff41);
		color: var(--nes-black);
		box-shadow: 0 0 10px rgba(0, 255, 65, 0.5); /* Неоновое свечение */
	}
</style>




