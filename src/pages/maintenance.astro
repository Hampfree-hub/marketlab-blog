---
// src/pages/maintenance.astro
import TerminalLayout from '../layouts/TerminalLayout.astro';
---

<TerminalLayout title="SYSTEM MAINTENANCE | MarketLab OS">
	<main class="maintenance-screen">
		<div class="system-alert">
			<pre class="alert-icon">
  ! ! ! ALERT ! ! !
      _______
     |  ___  |
     | |   | |
     | |___| |
     |_______|
     |_______|
			</pre>
			<h1>SYSTEM_MAINTENANCE_IN_PROGRESS</h1>
		</div>

		<div class="status-box">
			<div class="status-line">NODE_STATUS: <span class="offline">OFFLINE</span></div>
			<div class="status-line">UPTIME: 0.00s</div>
			<div class="status-line">REASON: Scheduled security sweep by KAI</div>
			<div class="status-line">ETA: T-minus 120 minutes</div>
		</div>

		<div class="maintenance-logs">
			<div class="log-line">[14:00:01] Initiating backup of all reports... [OK]</div>
			<div class="log-line">[14:05:22] Patching router vulnerability... [IN_PROGRESS]</div>
			<div class="log-line">[14:10:05] Emily is cleaning the coffee machine... [DONE]</div>
			<div class="log-line typing-text">Scanning for unauthorized connections...</div>
		</div>

		<div class="actions">
			<a href="https://t.me/hampfree_market_lab" class="cmd-btn">CHECK TELEGRAM NODE</a>
		</div>
	</main>
</TerminalLayout>

<style>
	.maintenance-screen {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		min-height: 60vh;
		gap: 40px;
		text-align: center;
	}

	.alert-icon {
		color: var(--term-amber);
		font-size: 1.2rem;
		margin-bottom: 20px;
		animation: blink 1s step-end infinite;
	}

	@keyframes blink { 50% { opacity: 0.3; } }

	h1 {
		font-size: 1.5rem;
		margin: 0;
		color: var(--term-amber);
	}

	.status-box {
		border: 1px solid var(--term-dim);
		padding: 20px;
		background: rgba(255, 176, 0, 0.05);
		width: 100%;
		max-width: 500px;
		text-align: left;
	}

	.status-line {
		margin-bottom: 10px;
		font-size: 0.9rem;
	}

	.offline { color: #ff3333; font-weight: bold; }

	.maintenance-logs {
		width: 100%;
		max-width: 600px;
		font-size: 0.8rem;
		text-align: left;
		color: var(--term-blue);
		opacity: 0.8;
	}

	.log-line { margin-bottom: 5px; }

	.typing-text::after {
		content: "|";
		animation: cursor-blink 1s step-end infinite;
	}

	@keyframes cursor-blink { 50% { opacity: 0; } }

	.cmd-btn {
		color: var(--term-blue);
		text-decoration: none;
		border: 1px solid var(--term-blue);
		padding: 10px 25px;
		transition: all 0.2s;
	}

	.cmd-btn:hover {
		background: var(--term-blue);
		color: var(--term-bg);
		box-shadow: 0 0 15px var(--term-blue);
	}
</style>
