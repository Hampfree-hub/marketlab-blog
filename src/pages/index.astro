---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="ru">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main style="padding-top: 2.5em;">
			<section class="hero">
				<h1>Добро пожаловать в {SITE_TITLE}</h1>
				<p class="subtitle">{SITE_DESCRIPTION}</p>
				<a href="/blog/" class="cta-button">Читать блог</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero {
		text-align: center;
		padding: 4em 1em;
		max-width: 720px;
		margin: 0 auto;
	}

	.hero h1 {
		font-size: 3.052em;
		margin-bottom: 0.5em;
		color: var(--text-primary);
	}

	.hero .subtitle {
		font-size: 1.25em;
		color: var(--text-secondary);
		margin-bottom: 2em;
		line-height: 1.6;
	}

	.cta-button {
		display: inline-block;
		padding: 1em 2em;
		background-color: var(--green-primary, var(--green-forest));
		color: var(--text-white, white) !important;
		text-decoration: none;
		border-radius: 999px;
		font-weight: 600;
		letter-spacing: 0.02em;
		transition: background-color var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1)), transform var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1)), box-shadow var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1)), opacity var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
		box-shadow: 0 2px 8px rgba(45, 95, 79, 0.15);
		opacity: 0.97;
		position: relative;
		backface-visibility: hidden;
		-webkit-font-smoothing: antialiased;
	}

	.cta-button:hover {
		background-color: var(--green-light, var(--green-bright, var(--accent)));
		color: var(--text-white, white) !important;
		opacity: 1;
		transform: translateY(-1px);
		box-shadow: 0 4px 12px rgba(45, 95, 79, 0.2);
		text-decoration: none;
	}

	@media (max-width: 720px) {
		.hero h1 {
			font-size: 2.369em;
		}

		.hero .subtitle {
			font-size: 1.125em;
		}
	}
</style>
