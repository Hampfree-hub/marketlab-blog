---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import BannerCarousel from '../../components/BannerCarousel.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				max-width: 1200px;
				margin: 0 auto;
				padding: 2.5em 1em 0 1em;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 1.5rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				transition: transform var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
			}
			ul li * {
				text-decoration: none;
			}
			ul li a {
				display: block;
				transition: transform var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				transition: box-shadow var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
			}
			.title {
				margin: 0;
				color: var(--text-primary);
				line-height: 1;
				transition: color var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
			}
			.date {
				margin: 0;
				color: var(--text-secondary);
				transition: color var(--transition-smooth, 0.4s cubic-bezier(0.4, 0, 0.2, 1));
			}
			ul li:hover a {
				transform: translateY(-4px);
			}
			ul li:hover .title,
			ul li:hover .date {
				color: var(--green-primary, var(--accent));
			}
			ul li:hover img {
				box-shadow: var(--box-shadow);
			}
			/* Убираем двойное выдвижение - только карточка двигается */
			ul li a img {
				transform: none;
			}
			@media (max-width: 720px) {
				ul {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<BannerCarousel />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
